{
  "name": "@jobspot/server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "babel src --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\" --out-dir dist --copy-files --source-maps --verbose && cp .env.example dist/.env",
    "dev": "ts-node-dev --inspect --transpile-only --ignore node_modules src/app.ts",
    "copy-to-package": "babel-node --extensions \".es6,.js,.jsx,.ts,.tsx\" scripts/copySchemaToPackage.js",
    "update-schema": "babel-node --extensions \".es6,.js,.jsx,.ts,.tsx\" scripts/updateSchema.js && yarn copy-to-package"
  },
  "license": "MIT",
  "dependencies": {
    "@entria/graphql-mongoose-loader": "^4.3.2",
    "@koa/cors": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "dataloader": "^2.0.0",
    "dotenv-safe": "^8.2.0",
    "env-var": "^6.2.0",
    "graphql": "^14.5.8",
    "graphql-relay": "^0.6.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-graphql": "^0.8.0",
    "koa-mount": "^4.0.0",
    "mongoose": "^5.9.25"
  },
  "devDependencies": {
    "@jobspot/babel": "*",
    "@babel/core": "^7.10.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv-safe": "^8.1.0",
    "@types/graphql": "^14.5.0",
    "@types/graphql-relay": "^0.6.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/koa-graphql": "^0.8.4",
    "@types/koa-mount": "^4.0.0",
    "@types/koa__cors": "^3.0.1",
    "@types/mongoose": "^5.7.32",
    "@types/node": "^14.0.24",
    "babel-loader": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.52"
  }
}
