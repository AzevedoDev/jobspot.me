{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "module": "CommonJS",
    "noEmit": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "dom",
      "DOM.Iterable"
    ],
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "build"]
}